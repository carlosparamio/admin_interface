!!! XML
!!! Strict
%html{html_attrs}
  %head
    %title= "#{AdminInterface::Config.app_name}"
    %meta{'http-equiv' => "Content-Type", :content => "text/html;charset=UTF-8"}
    = stylesheet_link_tag 'admin'
    = javascript_include_tag :defaults
  %body
    #header
      %h1= "#{AdminInterface::Config.app_name}"
      %ul#header_links= render :partial => 'layouts/header_links'
      %ul#primary_tabs= render :partial => 'layouts/primary_tabs'
      %ul#secondary_tabs= render :partial => 'layouts/secondary_tabs'

    #panel
      = display_panel_header_if_present
      #panel_content
        = display_success_if_present
        = display_notice_if_present
        = display_error_if_present
        = yield
      = display_panel_footer_if_present

    = display_sidebar_if_present

    #footer= "&copy; #{link_to "Evolve Studio", "http://evolve.st/"}, 2009 | #{link_to "info@evolve.st", "mailto:info@evolve.st"}"
    
    :javascript
      jQuery(document).ready(function($) {
        setTimeout(function(){ $('#success').fadeOut() }, 3000);
        $("input:visible:enabled:first").focus();
      });